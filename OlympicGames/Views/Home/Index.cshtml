@model CountryListViewModel
@{
    ViewData["Title"] = "Countries";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Conference</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameId"
                   asp-route-activeSport="@Model.ActiveSport"
                   asp-route-activeCategory="@Model.ActiveCategory"
                   class="list-group-item @Model.CheckActiveGame(game.GameId)">
                    @game.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Sport</h3>
        <div class="list-group">
            @foreach (Sport sport in Model.Sports)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeSport="@sport.SportId"
                   asp-route-activeCategory="@Model.ActiveCategory"
                   class="list-group-item @Model.CheckActiveSport(sport.SportId)">
                    @sport.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category category in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeSport="@Model.ActiveSport"
                   asp-route-activeCategory="@category.CategoryId"
                   class="list-group-item @Model.CheckActiveCategory(category.CategoryId)">
                    @category.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryId">
                        <img src="~/images/@country.FlagImage" alt="@country.Name"
                             title="@country.Name | @country.Game.Name @country.Sport.Name @country.Category.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
